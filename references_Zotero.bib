	number = {11},
	journal = {Nature Protocols},
	author = {Kennedy, Scott R. and Schmitt, Michael W. and Fox, Edward J. and Kohrn, Brendan F. and Salk, Jesse J. and Ahn, Eun Hyun and Prindle, Marc J. and Kuong, Kawai J. and Shen, Jiang-Cheng and Risques, Rosa-Ana and Loeb, Lawrence A.},
