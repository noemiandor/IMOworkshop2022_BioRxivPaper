	journal = {Molecular Systems Biology},
	author = {Iskar, Murat and Zeller, Georg and Blattmann, Peter and Campillos, Monica and Kuhn, Michael and Kaminska, Katarzyna H. and Runz, Heiko and Gavin, Anne-Claude and Pepperkok, Rainer and van Noort, Vera and Bork, Peer},
