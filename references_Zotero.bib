	journal = {Bioinformatics},
	author = {Tolliver, David and Tsourakakis, Charalampos and Subramanian, Ayshwarya and Shackney, Stanley and Schwartz, Russell},
	month = jun,
	year = {2010},
	pmid = {20529894},
	pages = {i106--i114}
}

